{
  "name": "scary_donetskiy/dockent",
  "description": "Docker management tool",
  "minimum-stability": "dev",
  "license": "BSD 2-Clause",
  "authors": [
    {
      "name": "Vladyslav Pozdnyakov",
      "email": "scary_donetskiy@live.com"
    }
  ],
  "require": {
    "php": ">=7.1.0",
    "ext-phalcon": ">=3.2",
    "ext-yaml": "*",
    "ext-zip": "*",
    "dockent/connector": "master",
    "vados/phalcon-tcplogger": "dev-master",
    "vados/phalcon-http-methods-plugin": "dev-master",
    "vados/phalcon-migration-runner": "dev-master"
  },
  "require-dev": {
    "phalcon/ide-stubs": "v3.2.1",
    "phpunit/phpunit": "^7.0@dev"
  },
  "repositories": [
    {
      "type": "vcs",
      "url": "https://Scary_Donetskiy@bitbucket.org/scary_develop/dockent-connector.git"
    }
  ],
  "autoload": {
    "psr-4": {
      "Dockent\\": "src/app/",
      "Dockent\\Tests\\": "tests/",
      "Dockent\\ci\\": "ci/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit --bootstrap src/bootstrap.php tests/",
    "testsCoverage": "vendor/bin/phpunit --bootstrap src/bootstrap.php --coverage-html tests/coverage/ --whitelist src/app/ tests/",
    "post-update-cmd": ["Dockent\\ci\\Frontend::download"]
  }
}
